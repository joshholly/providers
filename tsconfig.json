{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@entrypoint": ["./index.ts"]
    },
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__test__", "vite.config.ts"]
}
